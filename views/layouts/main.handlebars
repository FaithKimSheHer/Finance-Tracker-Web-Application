    <body> 
        <header> 
            <div id="logo">
                <img src="/public/images/logo.png" href="/" alt="logo" width="100" height="100">
                <h1 class="home-link"><a href="/">Expense Tracker</a></h1> 
            </div>
            <div id="links">
                {{#if user}}
                    <a id="logout-link" href="/user/logout">Logout</a>
                {{/if}}
                {{#else}}
                    <a id="login-link" href="/user/login">Login</a>
                    or
                    <a id="register-link" href="/user/register">Register</a>
                {{/else}}
            </div>
        </header>
        <main>
            {{> summary}} <!-- syntax for rendering partial -->
            {{{ body }}}
            {{> update}}
        </main>
